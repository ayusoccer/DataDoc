<p id="notice"><%= notice %></p>

<h1>Billingstatements</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Description</th>
      <th>Total</th>
      <th>Statement num</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @billingstatements.each do |billingstatement| %>
      <tr>
        <td><%= billingstatement.date %></td>
        <td><%= billingstatement.description %></td>
        <td><%= billingstatement.total %></td>
        <td><%= billingstatement.statement_num %></td>
        <td><%= link_to 'Show', billingstatement %></td>
        <td><%= link_to 'Edit', edit_billingstatement_path(billingstatement) %></td>
        <td><%= link_to 'Destroy', billingstatement, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

